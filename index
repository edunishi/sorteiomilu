  <div class="resultado" id="resultado"></div>

  <script>
    const presentesDisponiveis = ["Calcinha P", "Cueca G", "Pijama G", "Camisola P"];
    const sorteados = {};

    function sortearPresente() {
      const nome = document.getElementById("nomeSelect").value;
      const resultado = document.getElementById("resultado");

      if (!nome) {
        resultado.innerHTML = "â— Por favor, selecione seu nome.";
        return;
      }

      if (sorteados[nome]) {
        resultado.innerHTML = "ğŸ›ï¸ ${nome}, vocÃª jÃ¡ sorteou: <strong>${sorteados[nome]}</strong>";
        return;
      }

      if (presentesDisponiveis.length === 0) {
        resultado.innerHTML = "ğŸ Todos os presentes jÃ¡ foram sorteados!";
        return;
      }

      const index = Math.floor(Math.random() * presentesDisponiveis.length);
      const presente = presentesDisponiveis.splice(index, 1)[0];
      sorteados[nome] = presente;

      resultado.innerHTML = "ğŸ‰ ${nome}, o presente que vocÃª deve levar Ã©: <strong>${presente}</strong>";
    }
  </script>
